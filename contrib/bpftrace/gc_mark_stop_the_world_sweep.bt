#!/usr/bin/env bpftrace

BEGIN
{
    printf("Tracing mark-stw-sweep times... Hit Ctrl-C to end.\n");
}

usdt:usr/lib/libjulia-internal.so:julia:gc__mark__stop__the_world__sweep__begin
{
    @start[pid] = nsecs;
}

usdt:usr/lib/libjulia-internal.so:julia:gc__mark__stop__the_world__sweep__end
/@start[pid]/
{
    @usecs[pid] = hist((nsecs - @start[pid]) / 1000);
    delete(@start[pid]);
}

END
{
    clear(@start);
}
